<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630" width="1200" height="630">
  <defs>
    <linearGradient id="ogBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8fafc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e2e8f0;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="cardBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1d4ed8;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="1200" height="630" fill="url(#ogBg)"/>

  <!-- Main card -->
  <rect x="100" y="100" width="1000" height="430" rx="20" fill="url(#cardBg)"/>

  <!-- ERP Icon -->
  <g fill="white" transform="translate(150, 180)">
    <!-- Bar chart -->
    <rect x="0" y="120" width="20" height="80"/>
    <rect x="30" y="80" width="20" height="120"/>
    <rect x="60" y="100" width="20" height="100"/>
    <rect x="90" y="60" width="20" height="140"/>
    <rect x="120" y="90" width="20" height="110"/>
    <rect x="150" y="70" width="20" height="130"/>
    <rect x="180" y="85" width="20" height="115"/>

    <!-- Trend line -->
    <path d="M10 160 L40 110 L70 130 L100 90 L130 120 L160 100 L190 115"
          stroke="white" stroke-width="4" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </g>

  <!-- Text -->
  <text x="400" y="220" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="white">
    Enterprise ERP System
  </text>
  <text x="400" y="280" font-family="Arial, sans-serif" font-size="24" fill="white" opacity="0.9">
    Complete Business Management Solution
  </text>
  <text x="400" y="320" font-family="Arial, sans-serif" font-size="18" fill="white" opacity="0.8">
    Inventory • Sales • Finance • HR • Analytics
  </text>

  <!-- URL -->
  <text x="100" y="580" font-family="Arial, sans-serif" font-size="16" fill="#64748b">
    erp-system.com
  </text>
</svg>